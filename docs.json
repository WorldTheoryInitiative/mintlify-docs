{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "PolyRouter",
  "colors": {
    "primary": "#FFA500",
    "light": "#FFB732",
    "dark": "#CC8400"
  },
  "favicon": "/favicon.svg",
  "api": {
    "playground": {
      "display": "interactive",
      "proxy": true
    },
    "examples": {
      "languages": ["curl", "python", "javascript", "go"],
      "defaults": "required"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Sports V1",
            "openapi": "openapi.json",
            "pages": [
              "GET /league-info-v1",
              "GET /list-games-v1",
              "GET /games-v1/{game_id}",
              "GET /awards-v1"
            ]
          },
          {
            "group": "Markets V2",
            "openapi": "openapi.json",
            "pages": [
              "GET /events-v2",
              "GET /events-v2/{event_id}",
              "GET /markets-v2",
              "GET /markets-v2/{market_id}",
              "GET /price-history-v2",
              "GET /search-v2",
              "GET /series-v2",
              "GET /series-v2/{series_id}"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "API Status",
          "href": "https://status.polyrouter.io",
          "icon": "chart-line"
        },
        {
          "anchor": "Blog",
          "href": "https://polyrouter.io",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@polyrouter.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get API Key",
      "href": "https://polyrouter.io/api-keys"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/polyrouter_io",
      "github": "https://github.com/polyrouter-io",
      "linkedin": "https://linkedin.com/company/polyrouter"
    }
  }
}
