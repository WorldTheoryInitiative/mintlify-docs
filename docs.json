{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "PolyRouter",
  "colors": {
    "primary": "#FFA500",
    "light": "#FFB732",
    "dark": "#CC8400"
  },
  "favicon": "/favicon.ico",
  "api": {
    "playground": {
      "display": "interactive",
      "proxy": true
    },
    "examples": {
      "languages": ["curl", "python", "javascript", "go"],
      "defaults": "required"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "index",
              "api-reference/introduction"
            ]
          },
          {
            "group": "Platform",
            "openapi": "openapi/platform.json",
            "pages": [
              "GET /platforms"
            ]
          },
          {
            "group": "Sports",
            "openapi": "openapi/sports.json",
            "pages": [
              "GET /league-info",
              "GET /list-games",
              "GET /games/{game_id}",
              "GET /list-awards",
              "GET /awards/{award_id}",
              "GET /list-futures",
              "GET /futures/{future_id}"
            ]
          },
          {
            "group": "Markets",
            "openapi": "openapi/markets.json",
            "pages": [
              "GET /markets",
              "GET /markets/{market_id}",
              "GET /price-history",
              "GET /markets/{market_id}/orderbook",
              "GET /historical-orderbook",
              "GET /trades"
            ]
          },
          {
            "group": "Events",
            "openapi": "openapi/events.json",
            "pages": [
              "GET /events",
              "GET /events/{event_id}"
            ]
          },
          {
            "group": "Series",
            "openapi": "openapi/series.json",
            "pages": [
              "GET /series",
              "GET /series/{series_id}"
            ]
          },
          {
            "group": "Profiles",
            "openapi": "openapi/profiles.json",
            "pages": [
              "GET /profile/info",
              "GET /profile/trades"
            ]
          }
        ]
      },
      {
        "tab": "Changelog",
        "pages": [
          "api-reference/changelog"
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Discord",
          "href": "https://discord.gg/fyagg92CVM",
          "icon": "discord"
        },
        {
          "anchor": "X (Twitter)",
          "href": "https://x.com/polyrouter",
          "icon": "x-twitter"
        },
        {
          "anchor": "Get API Key",
          "href": "https://polyrouter.io",
          "icon": "key"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Questions? Email us",
        "href": "mailto:hello@polyrouter.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get API Key",
      "href": "https://polyrouter.io/"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/polyrouter",
      "github": "https://github.com/polyrouter-io",
      "linkedin": "https://linkedin.com/company/polyrouter"
    }
  }
}
